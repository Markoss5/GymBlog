<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/css/Busca.css" rel="stylesheet">
</head>
<body>
@{
    ViewData["Title"] = "Buscar Gimnasio";
}

<div class="text-center">
    <h1 class="display-4">Buscar el Mejor Gimnasio por Barrio</h1>

    <form method="post" action="/Home/BuscarGym">
        <div class="form-group">
            <label for="barrio">Selecciona un barrio:</label>
            <select class="form-control" id="barrio" name="barrio" required>
                @foreach (var gym in ViewBag.Gyms)
                {
                    <option value="@gym.Barrio">@gym.Barrio</option>
                }
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Buscar</button>
    </form>

    @if (ViewBag.Gym != null)
    {
        var gym = ViewBag.Gym as Gym;
        <div class="col-md-4 mb-4">
            <div class="card gym-card">
                <img src="@gym.RutaImagen" class="card-img-top gym-img" alt="@gym.NombreGym">
                <div class="card-body">
                    <h5 class="card-title">@gym.NombreGym</h5>
                    <p class="card-text">@gym.Barrio</p>
                    <p class="card-text"><small class="text-muted">@gym.Direccion</small></p>
                </div>
            </div>
        </div>
    }
</div>
</body>
</html>
